extends layout
block content
  include includes/header
  .wrapper.wrapper--center
    h1(class="heading") Sign up
    div(class="container container--narrow")
      include includes/flash
      form(class="form" method="post" action="/signup")
        .form__group
          label(for="name" class="form__label") Name
          input(class="form__input" name="name" type="text" placeholder="John Doe" id="name" required)
        .form__group
          label(for="email" class="form__label") Email
          input(class="form__input" name="email" type="email" placeholder="john@gmail.com" id="email" required)
        .form__group
          label(for="password" class="form__label") Password
          input(class="form__input" type="password" name="password" placeholder="" id="password" required)
        button(class="form__btn") Signup