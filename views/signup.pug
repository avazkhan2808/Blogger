extends layout
block content
  include includes/header
  .wrapper.wrapper--center
    h1(class="heading") Sign up
    form(class="form" method="post" action="/signup")
      .form__group
        label(for="name" class="form__label") Name
        input(class="form__input" name="name" type="text" placeholder="John Doe" id="name")
      .form__group
        label(for="email" class="form__label") Email
        input(class="form__input" name="email" type="email" placeholder="john@gmail.com" id="email")
      .form__group
        label(for="password" class="form__label") Password
        input(class="form__input" type="password" name="password" placeholder="" id="password")
      button(class="form__btn") Signup