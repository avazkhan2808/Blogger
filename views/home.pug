extends layout
block content
  include includes/header
  main
    .wrapper
      .inner
        h1(class="heading") Latest articles
        .cards
          each article, index in articles
            .card
              article(class="card__article")
                a(href=`/article/${article.slug}` class="card__title")= article.title
                span(class="card__date")= article.date
              if user
                if user._id == article.authorID
                  .card__action
                    a(class="card__btn card__btn--del" data-id=article._id)
                      i(class="fal fa-times")
                    a(class="card__btn card__btn--edit" href=`/article/edit/${article.slug}`)
                      i(class='fal fa-pencil')
                else if user
                  .card__action
                    a(class='card__btn card__btn--save' data-id=article._id)
                      i(class="fal fa-bookmark")
  include includes/footer
  script(defer src="/js/home.js" type="module")